datasource db {
    provider  = "postgresql"
    url       = env("POSTGRES_PRISMA_URL")
    directUrl = env("POSTGRES_URL_NON_POOLING")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id        String   @id @default(uuid())
    name      String
    email     String   @unique
    password  String
    createdAt DateTime @default(now())

    @@map("users")
}

model Invoice {
    id         String   @id @default(uuid())
    customerId String
    amount     Int
    status     String
    date       DateTime
    customer   Customer @relation(fields: [customerId], references: [id])

    @@map("invoices")
}

model Customer {
    id       String    @id @default(uuid())
    name     String
    email    String    @unique
    imageUrl String
    invoices Invoice[]

    @@map("customers")
}

model Revenue {
    month   String @unique @db.VarChar(4)
    revenue Int

    @@map("revenue")
}
